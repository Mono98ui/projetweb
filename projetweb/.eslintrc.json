{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard",
    "react-app",
    "strict-react/es6",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "semi": [
      "error",
      "always"
    ],
    "react/require-optimization": "off",
    "react/jsx-handler-names": "warn",
    "comma-dangle": [
      "error",
      {
        "arrays": "always-multiline",
        "objects": "always-multiline"
      }
    ],
    "react/forbid-component-props": "off"
  }
}